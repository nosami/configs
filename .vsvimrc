set incsearch
set hlsearch
let mapleader=" "
set cursorline
set clipboard=unnamed
set expandtab
set ignorecase
set smartcase
set autoindent
set backspace=indent,eol,start
set tabstop=4
set shiftwidth=4
set number
set relativenumber

nnoremap <C-p> :vsc MonoDevelop.Ide.Commands.SearchCommands.GotoFile <CR>
nnoremap <C-t> :vsc MonoDevelop.Ide.Commands.SearchCommands.GotoType <CR>
nnoremap ≈ :vsc MonoDevelop.Ide.Commands.SearchCommands.GotoCommand <CR>
vnoremap <C-p> :vsc MonoDevelop.Ide.Commands.SearchCommands.GotoFile <CR>
vnoremap <C-t> :vsc MonoDevelop.Ide.Commands.SearchCommands.GotoType <CR>
